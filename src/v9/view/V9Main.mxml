<?xml version="1.0" encoding="utf-8"?>
<s:Group
	xmlns:fx="http://ns.adobe.com/mxml/2009" 
	xmlns:s="library://ns.adobe.com/flex/spark" 
	xmlns:mx="library://ns.adobe.com/flex/mx"
	xmlns:view="v9.view.*"
	xmlns:components="v9.view.components.*">
	
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>

	<!-- Main Content -->
	<components:SparkViewStack
		id="mainContentStack"
		borderVisible="false"
		left="0" right="0" top="{header.height}" bottom="{footer.height}"
		skinClass="v9.view.skins.MainContentStackSkin">
		
		<view:V9Editor visible="false" width="100%" height="100%" />
		<!--<view:V9Browser width="100%" height="100%" />-->
		
	</components:SparkViewStack>
	
	<!-- Header -->
	<s:Group id="header" width="100%" height="50" top="0">
		<s:Rect width="100%" height="100%">
			<s:fill>
				<s:SolidColor color="#FFFFFF" />
			</s:fill>
		</s:Rect>
		<components:Header width="100%" height="100%" />
		<s:RectangularDropShadow
			width="100%" height="100%"
			blurX="6" blurY="6" alpha="0.4" distance="3" angle="90"
			color="#000000"/>
	</s:Group>
	
	<!-- Footer -->
	<components:Footer id="footer" width="100%" height="24" bottom="0" />

</s:Group>
